{% comment %}
  Set hero as enabled so JS is loaded at end of index.liquid.
  Also set variables to control JS settings and appearance.

  hero_full_height variable is also available in Header section.
{% endcomment %}

{% comment %}
  If hero is first section on homepage, add class that sets
  negative top-margin for alignment and force full height.
{% endcomment %}

<div data-section-id="{{ section.id }}" class="wrapper">

    <div class="grid hero-{{ section.id }} hero hero--first">

      {% comment %}<div class="hero__left">{% endcomment %}

        <div class="grid__item hero__image--left three-quarters" style="background: url({{ section.settings.image_left | img_url: '1024x1024' | format: 'jpg' }}) center center no-repeat; background-size: cover;">
          <img src="{{ section.settings.image_left | img_url: '1024x1024' | format: 'jpg' }}" style="display: none;">
        </div>

        <div class="grid__item hero__image--right one-quarter">
          <div>
            <img src="{{ section.settings.image_right | img_url: '1024x1024' | format: 'jpg' }}">
            <button type="button" class="btn" data-fancybox data-src="#newsletter" href="javascript:;">{{ section.settings.button_text }}</button>
          </div>
        </div>

{% comment %}        {% if section.settings.image_left != blank %}
          <style>
            @media screen and (max-width: 1024px) and (max-height: 768px)  {
              .hero__image--left {
                background-image: url('{{ section.settings.image_left | img_url: '1024x1024' | format: 'jpg' }}');
              }
            }
            @media screen and (min-width: 1025px), screen and (min-height: 769px) {
              .hero__image--left {
                background-image: url('{{ section.settings.image_left | img_url: '2048x2048' | format: 'jpg' }}');
              }
            }
          </style>
        {% else %}
          <div class="placeholder-background">
            {% capture current %}{% cycle 1, 2 %}{% endcapture %}
            {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}{% endcomment %}

      {% comment %}</div>{% endcomment %}

{% comment %}      <div class="hero__right{% if section.settings.image_left == blank %} slide--placeholder{% endif %}">
        
      </div>{% endcomment %}

    </div>

</div>

{% schema %}
  {
    "name": "Photos",
    "settings": [
      {
        "type": "image_picker",
        "id": "image_left",
        "label": "Image Left"
      },
      {
        "type": "image_picker",
        "id": "image_right",
        "label": "Image Right"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text"
      }
    ]
  }
{% endschema %}
