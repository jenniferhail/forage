<!-- /templates/page.liquid -->
<div class="grid">

  <hr class="hr--large">
  
  <div class="grid__item large--five-sixths push--large--one-twelfth">

    <header class="section-header text-center">
      <h2>{{ page.title }}</h2>
      {% if page.metafields.c_f.subtext %}
        <h1>{{ page.metafields.c_f.subtext }}</h1>
      {% endif %}
    </header>

    <div class="grid">
      <div class="grid__item large--four-fifths push--large--one-tenth">
        <div class="rte rte--nomargin rte--indented-images">
          {{ page.content }}
        </div>
      </div>
    </div>

    {% if page.metafields.c_f.btnTitle != blank %}
      <div class="section-header text-center">

        <img src="{{ 'icon-succulent.png' | asset_url }}" class="forage-icon">

        <h1>{{ page.metafields.c_f.btnTitle }}</h1>
        {% if page.metafields.c_f.btnText %}
          <a href="{{ page.metafields.c_f.btnLink }}" class="btn btn--page">{{ page.metafields.c_f.btnText }}</a>
        {% endif %}
        <hr class="hr--medium">
      </div>
    {% endif %}

  </div>
</div>
