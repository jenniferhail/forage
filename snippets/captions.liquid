<script>
jQuery(document).ready(function() {
    jQuery( ".caption img" ).each(function( index ) {
        var alt = jQuery(this).attr('alt');
        if(alt != ""){
            // jQuery(this).wrap("<figure />");
            jQuery(this).parent().append("<figcaption class='figcap'>"+alt+"</figcaption>");
        }
    });
});
</script>

<style>
    .figcap {
        color: {{ settings.caption_color }};
        font-family: {{ settings.caption_font }};
        font-size: {{ settings.caption_size }};
        {% if settings.caption_bold %}
        font-weight:bold;
        {% endif %}
        {% if settings.caption_ital %}
        font-style:italic;
        {% endif %}
        text-align: {{ settings.caption_align }};
        padding: 15px 0 0;
        max-width: 480px;
    }
</style>